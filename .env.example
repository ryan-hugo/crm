# Configurações do Banco de Dados
DATABASE_URL=postgres://username:password@localhost:5432/crm_db?sslmode=disable

# Configurações JWT
JWT_SECRET=your-super-secret-jwt-key-here

# Configurações do Servidor
PORT=8080
ENVIRONMENT=development

# Configurações de Log
LOG_LEVEL=DEBUG
LOG_FORMAT=text
LOG_OUTPUT=stdout
DEBUG=true

# Configurações avançadas de log (opcional)
# LOG_MAX_SIZE=100
# LOG_MAX_BACKUPS=10
# LOG_MAX_AGE=30
# LOG_COMPRESS=true

# Para produção, usar:
# LOG_LEVEL=INFO
# LOG_FORMAT=json
# LOG_OUTPUT=both
# DEBUG=false

